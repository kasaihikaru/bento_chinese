<% provide :title, " | プロフィール編集" %>

<div class="container">
  <div class="row col-xs-12 second-color">
    <div class="devise-center">
      <h2>プロフィール編集</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>

        <div class="label">
          <%= f.label :nickname, "ニックネーム(最大15文字)" %><br />
          <%= f.text_field :nickname, placeholder: current_user.nickname, maxlength: '15' %>
        </div><br>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true %>
        </div><br>

        <div class="field">
          <%= f.label :avatar, "プロフィール画像" %><br />
          <%= f.file_field :avatar %>
        </div><br>

        <div class="label"><%= f.label :blog, "ブログ、HP" %><br />
            <%= f.text_field :blog, placeholder: current_user.blog %>
        </div><br /><br>

        <div class="label"><%= f.label :introduction, "自己紹介" %><br />
            <%= f.text_area :introduction, placeholder: current_user.introduction, maxlength: '50000' %>
        </div><br><br>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field">
          <%= f.label :password, "新しいパスワード" %><br><i>(パスワードを変更しない場合は、空欄にしてください。)</i><br />
            <em><%= @minimum_password_length %>文字以上</em><br />
          <%= f.password_field :password, autocomplete: "off" %>
          <% if @minimum_password_length %>
          <% end %>
        </div><br>

        <div class="field">
          <%= f.label :password_confirmation, "新しいパスワード（確認）" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
        </div><br>

        <div class="field">
          <%= f.label :current_password, "現在のパスワード" %><span class="red">(必須)</span><br><i>(変更を保存するには、現在のパスワードを入力してください。)</i><br />
          <%= f.password_field :current_password, autocomplete: "off" %>
        </div><br>

        <div class="actions">
          <%= f.submit "更新" %>
        </div>
      <% end %>
    </div>
  </div>
</div>